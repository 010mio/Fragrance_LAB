<div class ="container">
  <h3>会員一覧</h3>

  <div class ="row justify-content-center">
  <div class ="col-5 align-items-center">
  <div class = "table table-bordered">
    <table>
      <thead>
        <th>名前</th>
        <th>登録日</th>
        <th>詳細</th>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <td><%= customer.name %></td>
        <td><%= customer.created_at.strftime('%Y/%m/%d')  %></td>
        <td><%= link_to "詳細", admin_customer_path(customer.id), class: "btn btn-sm btn-success" %></td>
      </tbody>
      <% end %>
    </table>
  </div>
  </div>
  </div>
</div>