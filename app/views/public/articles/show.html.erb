<h1>article show</h1>

<%= image_tag @article.image, size: "100x100" %>

<h2>タイトル</h2>
<p><%= @article.title %></p>

<h2>本文</h2>
<p><%= @article.body %></p>

<% if @article.customer == current_customer %>
  <%= link_to "編集", edit_article_path(@article.id) %>
  <%= link_to "削除", article_path(@article.id), method: :delete %>
<% end %>

 <% if @article.favorited_by?(current_customer) %>
    <p>
      <%= link_to article_favorites_path(@article), method: :delete do %>
        ♥<%= @article.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to article_favorites_path(@article), method: :post do %>
        ♡<%= @article.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>

<div>
  <p>コメント件数：<%= @article.comments.count %></p>
  <% @article.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image(50,50) %></p>
    <p><%= comment.customer.name %></p>
    <p><%= comment.created_at.strftime('%Y/%m/%d') %></p>
    <p><%= comment.comment_body %></p>
    <% if comment.customer == current_customer %>
      <%= link_to "削除", article_comment_path(comment.article, comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@article, @comment] do |f| %>
    <%= f.text_area :comment_body, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>