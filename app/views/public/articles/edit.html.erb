<div class ="container">

  <!--見出し-->
  <div class ="row justify-content-center py-1">
    <h3><i class="fas fa-newspaper"></i>ARTICLE</h3>
  </div>

  <!--サイドバー-->
  <%= render 'sidebar', sidebar: @sidebar %>

<%= image_tag @article.image, size: "100x100" %>

<%= form_with model: @article do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '保存' %>
  
<% end %>

</div>