<div class ="col-md-10 text-center">
  <!--見出し-->
  <div class="row justify-content-center p-3">
    <h3><i class="fas fa-leaf"></i>ARTICLE</h3>
  </div>

  <div class="row justify-content-center p-3">
    <div class="col-md-12">
      <%= image_tag @article.get_image, size: "100x100" %>
    </div>

    <%= form_with model: @article do |f| %>
      <p>タイトル</p>
      <%= f.text_field :title %>
      <p>本文</p>
    <div class="col-md-12">
      <%= f.text_area :body, class: "w-100" %>
    </div>
    <div class="col-md-12 p-3">
      <%= f.submit '保存',class: "btn btn-original" %>
    </div>

    <% end %>
  </div>

</div>