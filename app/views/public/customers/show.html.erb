<div class ="container">

  <!--見出し-->
  <div class ="row justify-content-center py-1">
    <h3><i class="fas fa-flask"></i>MY PAGE</h3>
  </div>

  <!-- ユーザーの詳細 -->
  <div class ="row justify-content-center my-5">
    <div class ="col-5 text-center">
      <h3>ようこそ、<%= @customer.name %>さん</h3>
      <p class ="my-5"><%= image_tag @customer.get_profile_image, size: "200x200" %></p>
      <p><%= link_to "プロフィール編集", edit_customer_path,class: "btn btn-dark" %></p>
      <p><%=link_to"お気に入り記事",favorites_customer_path(@customer),class: "btn btn-dark" %></p>
    </div>

    <!-- ユーザーの投稿一覧 -->
    <div class ="col-5 align-items-center">
      <table class = "table table-bordered">
        <thead class = "text-center">
          <th>タイトル</th>
          <th>詳細へ</th>
        </thead>
        <% @articles.each do |article| %>
        <tbody>
          <td><%= article.title %></td>
          <td class="text-center"><%= link_to "詳細へ", article_path(article.id),class: "btn btn-dark" %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>

</div>