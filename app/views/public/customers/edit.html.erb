<div class ="text-center">
  <!--見出し-->
  <div class ="row justify-content-center py-5">
    <h3><i class="fas fa-flask"></i>PLOFILE EDIT</h3>
  </div>

<!--エラーメッセージ-->
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <!--プロフィール情報-->
  <div class ="row justify-content-center py-3">
    <%= form_with model: @customer do |f| %>
      <p><label for="inputName">Name</label></p>
      <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
      <p class ="pt-3"><label for="inputImage">Profile Image</label></p>
      <p><%= f.file_field :profile_image,class: "btn btn-original", placeholder: "プロフィール画像", accept: "image/*" %></p>  
      <p class ="pt-3"><%= f.submit "変更を保存",class: "btn btn-original" %></p>
    <% end %>
  </div>
</div>