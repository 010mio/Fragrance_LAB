
  <% if customer_signed_in? %>
  <div class="justify-content-center p-2">
    <div class ="text-center p-3">
      <%= image_tag "p_header.png", width: '100%' %>
    </div>
  </div>
    <h4 class ="text-left"><i class="fas fa-leaf"></i>New Posts</h4>
  
    <div class ="row">
      <% @articles.first(3).each do |article| %>
       <div class="col-md-2">
          <div class="card">
            <h8 class="card-header"><%= article.title %></h8>
            <p class="card-img-top py-2"><%= image_tag article.get_image,  size: "40x130", class: 'card-img-top'%></p>
            <p class="text-center py-1"><%= link_to "Show more", article_path(article.id),class: "btn btn-original" %></p>
            <p class="text-muted"><i class="fas fa-pen-nib"></i><%= article.customer.name %></p>
            <p class="text-muted"><i class="fas fa-clock"></i><%= article.created_at.strftime('%Y/%m/%d') %></p>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="justify-content-center p-2">
        <div class ="text-center p-3">
          <%= image_tag "p_header.png", width: '100%' %>
        </div>
      </div>
    <% end %>
  </div>