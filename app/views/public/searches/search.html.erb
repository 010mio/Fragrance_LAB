<div class ="col-md-10">
  <div class ="row justify-content-center">
    <div class ="col-md-7 p-3">
      <h5>検索結果</h5>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>User name</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @results.each do |article| %>
            <tr>
              <td><%= article.title %></td>
              <td><%= article.body %></td>
              <td><%= article.customer.name %></td>
              <td><%= link_to 'Show', article,class: "btn btn-original" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class ="col-md-12 text-center">
      <%= link_to 'Top', articles_path,class: "btn btn-original" %>
    </div>
  </div>
</div>