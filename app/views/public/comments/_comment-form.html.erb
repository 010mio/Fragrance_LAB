<!--コメントフォームテンプレート-->
<% if current_customer.email != 'guest@email.com' %>
  <div class ="justify-content-center">
    <%= form_with model: [article, comment], local: false do |f| %>
      <div class="row justify-content-center">
        <p class ="col-8">
          <%= f.text_area :comment_body, placeholder: "コメントをここに", class: "w-100" %>
        </p>
        <p class ="col-12 text-center">
          <%= f.submit "送信", class: "btn btn-sm btn-original mx-2" %>
        </p>
      </div>
    <% end %>
  </div>
<% end %>