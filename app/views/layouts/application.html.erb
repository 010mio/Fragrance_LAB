        <a class="navbar-brand text-light" href="/">Fragrance LAB.</a>
      </nav>
    </header>

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-2 bg-original">
          <%= render 'layouts/sidebar'%>
        </div>
        <div class="col-md-10 mb-5">
          
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
